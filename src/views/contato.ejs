<%- include('./includes/head') %>
  <%- include('./includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="text-center">Contatos</h1>
          <p class="text-center lead">Crie e edite seus contatos</p>
          <%- include('includes/messages') %>

            <% if (contato._id) { %>
              <form action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else { %>
              <form action="/contato/register" method="POST">
            <% } %>
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="form-group my-3">
                <input value="<%= contato.nome %>" type="text" name='nome' class="form-control" placeholder="Nome">
              </div>
              <div class="form-group my-3">
                <input value="<%= contato.sobrenome %>" type="text" name='sobrenome' class="form-control" placeholder="Sobre Nome">
              </div>
              <div class="form-group my-3">
                <input value="<%= contato.telefone %>" type="tel" name='telefone' class="form-control" placeholder="Telefone">
              </div>
              <div class="form-group my-3">
                <input value="<%= contato.email %>" type="email" name='email' class="form-control" placeholder="E-mail">
              </div>
              <button type="submit" class="btn btn-primary my-3">Salvar</button>
            </form>

        </div>
        <div class="reponsive-table">
          <table class="table my-3">
            <tr>

            </tr>
          </table>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
    </div>

    <%- include('./includes/footer') %>